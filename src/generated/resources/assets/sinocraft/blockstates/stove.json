{
  "multipart": [
    {
      "when": {
        "facing": "north",
        "state": "close"
      },
      "apply": {
        "model": "sinocraft:block/stove_off"
      }
    },
    {
      "when": {
        "facing": "south",
        "state": "close"
      },
      "apply": {
        "model": "sinocraft:block/stove_off",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west",
        "state": "close"
      },
      "apply": {
        "model": "sinocraft:block/stove_off",
        "y": 270
      }
    },
    {
      "when": {
        "facing": "east",
        "state": "close"
      },
      "apply": {
        "model": "sinocraft:block/stove_off",
        "y": 90
      }
    },
    {
      "when": {
        "facing": "north",
        "state": "overload|damaged|working|idle"
      },
      "apply": {
        "model": "sinocraft:block/stove_on"
      }
    },
    {
      "when": {
        "facing": "south",
        "state": "overload|damaged|working|idle"
      },
      "apply": {
        "model": "sinocraft:block/stove_on",
        "y": 180
      }
    },
    {
      "when": {
        "facing": "west",
        "state": "overload|damaged|working|idle"
      },
      "apply": {
        "model": "sinocraft:block/stove_on",
        "y": 270
      }
    },
    {
      "when": {
        "facing": "east",
        "state": "overload|damaged|working|idle"
      },
      "apply": {
        "model": "sinocraft:block/stove_on",
        "y": 90
      }
    }
  ]
}