{
  "multipart": [
    {
      "when": {
        "state": "close",
        "facing": "north"
      },
      "apply": {
        "model": "sinocraft:block/stove_off"
      }
    },
    {
      "when": {
        "state": "close",
        "facing": "south"
      },
      "apply": {
        "model": "sinocraft:block/stove_off",
        "y": 180
      }
    },
    {
      "when": {
        "state": "close",
        "facing": "west"
      },
      "apply": {
        "model": "sinocraft:block/stove_off",
        "y": 270
      }
    },
    {
      "when": {
        "state": "close",
        "facing": "east"
      },
      "apply": {
        "model": "sinocraft:block/stove_off",
        "y": 90
      }
    },
    {
      "when": {
        "state": "damaged|overload|idle|working",
        "facing": "north"
      },
      "apply": {
        "model": "sinocraft:block/stove_on"
      }
    },
    {
      "when": {
        "state": "damaged|overload|idle|working",
        "facing": "south"
      },
      "apply": {
        "model": "sinocraft:block/stove_on",
        "y": 180
      }
    },
    {
      "when": {
        "state": "damaged|overload|idle|working",
        "facing": "west"
      },
      "apply": {
        "model": "sinocraft:block/stove_on",
        "y": 270
      }
    },
    {
      "when": {
        "state": "damaged|overload|idle|working",
        "facing": "east"
      },
      "apply": {
        "model": "sinocraft:block/stove_on",
        "y": 90
      }
    }
  ]
}